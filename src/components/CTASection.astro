const ctaLabel = "無料で始める";
---
<section class="w-full bg-gradient-to-r from-blue-100 to-blue-50 py-8 md:py-14">
  <div class="max-w-3xl mx-auto px-2 md:px-4 flex flex-col items-center text-center">
    <h2 class="text-xl md:text-2xl lg:text-3xl font-bold text-gray-900 mb-8 md:mb-12">{ctaText}</h2>
    <a href="#" class="inline-block px-6 md:px-8 py-2 md:py-3 bg-primary/80 backdrop-blur-md text-white font-semibold rounded-lg shadow-2xl border border-white/20 hover:bg-white hover:text-primary hover:border-primary transition-colors duration-150 text-base md:text-lg">{ctaLabel}</a>
  </div>
</section>

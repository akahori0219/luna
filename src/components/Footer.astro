---
const year = new Date().getFullYear();

const socialLinks = [
  { href: "https://x.com/", imgSrc: "/images/common/x-logo.png", alt: "X" },
  { href: "https://www.youtube.com/", imgSrc: "/images/common/youtube-logo.png", alt: "YouTube" },
  { href: "https://www.instagram.com/", imgSrc: "/images/common/Instagram-logo.png", alt: "Instagram" },
];
---
<footer class="bg-gray-950 border-t border-gray-800">
  <div class="max-w-5xl mx-auto px-6 py-5">
    <div class="flex flex-col sm:flex-row items-center justify-between gap-5">
      <!-- Logo and Copyright -->
      <div class="text-center sm:text-left">
        <a href="/" class="inline-flex items-center gap-3 mb-2">
          <img src="/images/common/luna-logo.png" alt="Luna" class="w-8 h-8 rounded-full" />
          <span class="font-bold text-lg text-white">Luna</span>
        </a>
        <p class="text-xs text-gray-400">
          Copyright &copy; {year} Luna Project. All rights reserved.
        </p>
      </div>

      <!-- Social Links -->
      <div class="flex items-center gap-4">
        {socialLinks.map(link => (
          <a href={link.href} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transform hover:-translate-y-1 transition-all duration-300">
            <img src={link.imgSrc} alt={link.alt} class="w-6 h-6" />
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>

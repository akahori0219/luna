---
const year = new Date().getFullYear();

const socialLinks = [
  { href: "https://youtube.com", imgSrc: "/youtube-logo.png", alt: "YouTube" },
  { href: "https://x.com", imgSrc: "/x-logo.png", alt: "X" },
  { href: "https://instagram.com", imgSrc: "/Instagram-logo.png", alt: "Instagram" },
];
---
<footer class="w-full bg-black border-t border-gray-800 pt-3 pb-2">
  <div class="max-w-5xl mx-auto px-4 flex flex-col items-center gap-6">
    <!-- SNSアイコン -->
    <div class="flex gap-6 mb-2">
      {socialLinks.map(link => (
        <a href={link.href} target="_blank" rel="noopener noreferrer" class="text-gray-500 hover:opacity-80 transition-opacity">
          <img src={link.imgSrc} alt={link.alt} class="w-6 h-6 object-contain" />
        </a>
      ))}
    </div>
    <div class="text-gray-500 text-[10px] text-center tracking-wide">&copy; {year} Luna - AI Vtuber. All rights reserved.</div>
  </div>
</footer>
